@model PrescriptionList.Models.Prescription
@{
    string title = ViewBag.Action + " Prescription";
    ViewData["Title"] = title;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="MedicationName" class="form-label">Medication Name</label>
        <input asp-for="MedicationName" class="form-control" />
        <span asp-validation-for="MedicationName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FillStatus" class="form-label">Fill Status</label>
        <select asp-for="FillStatus" class="form-select">
            <option value="New">New</option>
            <option value="Filled">Filled</option>
            <option value="Pending">Pending</option>
        </select>
        <span asp-validation-for="FillStatus" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Cost" class="form-label">Cost</label>
        <input asp-for="Cost" class="form-control" />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RequestDate" class="form-label">Request Date</label>
        <input asp-for="RequestDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="RequestDate" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="PrescriptionId" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}